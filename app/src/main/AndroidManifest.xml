<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.fmobile.spinthewheel">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_app_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Uspin">
        <activity
            android:name=".screens.AddWheelActivity"
            android:exported="false"
            android:label="@string/str_new_spin"
            android:parentActivityName=".screens.HomeActivity" />
        <activity
            android:name=".screens.CustomizeWheelActivity"
            android:exported="false"
            android:label="@string/str_edit"
            android:parentActivityName=".screens.SpinActivity" />
        <activity
            android:name=".screens.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".screens.HistoryActivity"
            android:exported="false"
            android:label="@string/str_history"
            android:parentActivityName=".screens.SpinActivity" />
        <activity
            android:name=".screens.SpinActivity"
            android:exported="false"
            android:label="@string/str_spin"
            android:parentActivityName=".screens.HomeActivity" />
        <activity
            android:name=".screens.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.SpinTheWheel.NoActionbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>