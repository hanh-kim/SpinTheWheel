<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E8E6E6"
                android:padding="5dp"
                android:text="Thêm mục mới"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_preview_bg_item"
                app:cardBackgroundColor="#F84D4D"
                android:layout_margin="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                app:cardCornerRadius="5dp">
                <TextView
                    android:id="@+id/tv_preview_name_item"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="Tên mục"
                    android:textStyle="bold"
                    android:textColor="#870202"
                    android:textSize="18dp" />

            </androidx.cardview.widget.CardView>

            <EditText
                android:id="@+id/edt_item_name"
                android:textSize="20dp"
                android:hint="Tên  mục"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_text_box"
                android:layout_margin="5dp"
                android:drawableRight="@drawable/ic_edit_pencil"
                android:drawablePadding="5dp"
                android:padding="5dp"/>

            <RelativeLayout
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_text_box">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Tên mục"
                    android:textStyle="bold"
                    android:text="Màu chữ"
                    android:textSize="18dp"
                    android:layout_alignParentLeft="true" />

                <androidx.cardview.widget.CardView

                    android:id="@+id/card_set_text_color"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    app:cardBackgroundColor="#870202"

                    />


            </RelativeLayout>

            <RelativeLayout
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_text_box">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Tên mục"
                    android:textStyle="bold"
                    android:text="Màu nền"
                    android:textSize="18dp"
                    android:layout_alignParentLeft="true" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_set_bg_color"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    app:cardBackgroundColor="#F84D4D"
                    />


            </RelativeLayout>


            <include layout="@layout/layout_button_1"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>